<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/yellow">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow">


                <ImageView
                    android:id="@+id/country_flag"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/flag_icon" />

                <TextView
                    android:id="@+id/flag_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_flag"
                    android:layout_centerHorizontal="true"
                    android:text="India"
                    android:textColor="@color/blue"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country_capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flag_name"
                    android:layout_centerHorizontal="true"
                    android:text="New Delhi"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/country_region_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_capital"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="Region - "
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_capital"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/country_region_heading"
                    android:text="Asia"
                    android:textColor="@color/blue"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/country_subregion_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_region_heading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="SubRegion - "
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country_subregion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_region_heading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/country_subregion_heading"
                    android:text="Southern Asia"
                    android:textColor="@color/blue"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/country_population_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_subregion_heading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="Population -"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country_population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_subregion_heading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/country_population_heading"
                    android:text="1420546"
                    android:textColor="@color/blue"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/country_boundary_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_population_heading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="Boundaries - "
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country_boundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_population_heading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/country_boundary_heading"
                    android:text="abs,sda,sfa"
                    android:textColor="@color/blue"
                    android:textSize="20sp"

                    />
                <TextView
                    android:id="@+id/country_language_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_boundary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="Languages - "
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/country_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country_boundary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/country_language_heading"
                    android:text="Hindi,English"
                    android:textColor="@color/blue"
                    android:textSize="20sp"

                    />



            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>